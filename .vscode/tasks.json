{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-std=c++14", // 指定 C++14 标准
                "-g", // 启用调试信息
                "${fileDirname}/*.cpp", // 当前文件
                "-o", // 输出选项
                "${fileDirname}/bin/${fileBasenameNoExtension}", // 可执行文件名称
                "-lpcap", // 链接 libpcap 库
                "-lpthread" // 链接 pthread 库
            ],
            "options": {
                "cwd": "${fileDirname}" // 设置当前工作目录
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}